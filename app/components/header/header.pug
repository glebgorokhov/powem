mixin header()
  +b.header&attributes(attributes)
    .container
      +e.A.logo(href="#")
        img(src="assets/images/logo.svg")

      +e.menu
        each item in getData('header').menu
          +e.A.link(href=item.link)!= item.text


mixin ui-kit-header()
  +ui-section
    +ui-section-head
      +ui-title Шапка
      +ui-path
        p Компонент: components/header/header

    +ui-section-content(true)
      +header(style="position: static")

    //- При +ui-section-content(true) контейнер отсутствует
    //- Для перечисления инлайновых блоков используется миксин +ui-elements-list()
    //- Рамка вокруг особой секции: +ui-special()
