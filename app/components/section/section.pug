mixin section()
  +b.section&attributes(attributes)
    block

mixin section-header()
  +e.header&attributes(attributes)
    block

mixin section-title(tag)
  +e(tag || 'h2').title&attributes(attributes)
    block

mixin section-content()
  +e.content&attributes(attributes)
    block

mixin section-description()
  +e.P.description&attributes(attributes)
    block

mixin ui-kit-section()
  +ui-section
    +ui-section-head
      +ui-title Разметка секций
      +ui-path
        p Компонент: components/section/section
      +ui-description
        p Описание компонента

    +ui-section-content()
      +section

    //- При +ui-section-content(true) контейнер отсутствует
    //- Для перечисления инлайновых блоков используется миксин +ui-elements-list()
    //- Рамка вокруг особой секции: +ui-special()
