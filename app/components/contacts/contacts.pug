mixin contacts()
  +b.contacts&attributes(attributes)
    +e.left
      +e.H2.title Контакты
      +e.group
        +e.P.subtitle Приемная СКБ ГТУ, помощник руководителей
        +e.contacts
          p Тел. +7 (812) 326-77-78, доб. 4-43-00

    +e.right
      +e.group
        +e.P.subtitle Контакты HR
        +e.contacts
          // p Тел. +7 (812) 346 70 37
          p E-mail <a href="mailto:recruitment@power-m.ru">recruitment@power-m.ru</a>

mixin ui-kit-contacts()
  +ui-section
    +ui-section-head
      +ui-title Компонент contacts
      +ui-path
        p Компонент: components/contacts/contacts
      +ui-description
        p Описание компонента

    +ui-section-content()
      +contacts

    //- При +ui-section-content(true) контейнер отсутствует
    //- Для перечисления инлайновых блоков используется миксин +ui-elements-list()
    //- Рамка вокруг особой секции: +ui-special()
